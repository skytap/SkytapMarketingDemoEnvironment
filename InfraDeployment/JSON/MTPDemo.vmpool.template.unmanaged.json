{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dnsLabelPrefix": {
      "type": "string",
      "metadata": {
        "description": "DNS Label for the Public IP. Must be lowercase. It should match with the following regular expression: ^[a-z][a-z0-9-]{1,61}[a-z0-9]$ or it will raise an error."
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_B4ms",
      "metadata": {
        "description": "Size of the VM"
      }
    },
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "Name of the VM"
      }
    },
    "powerShellPort": {
      "type": "string",
      "defaultValue": "27064"
    },
    "remoteDesktopPort": {
      "type": "string",
      "defaultValue": "56175"
    },
    "OSType": {
      "type": "string",
      "defaultValue": "Windows",
      "allowedValues": [
        "Windows",
        "Linux"
      ],
      "metadata": {
        "description": "Type of OS on the OS vhd"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location name of the virtual machine"
      }
    },
    "MTP-NSG": {
      "type": "string",
      "defaultValue": "MTP-NSG",
      "metadata": {
        "description": "Name for the NSG used to allow remote RDP"
      }
    },
    "osVhdUri": {
      "type": "string",
      "metadata": {
        "description": "Uri for the OS vhd"
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2017-10-01",
      "kind": "Storage",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "name": "[variables('diagStorageAccountName')]",
      "properties": {},
      "sku": {
        "name": "Standard_GRS"
      }
    },
    {
      "apiVersion": "2017-11-01",
      "location": "[resourceGroup().location]",
      "name": "[variables('MTP-vNetName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('MTP-AddressPrefix')]"
          ]
        },
        "dhcpOptions": {
          "dnsServers": [ "172.16.64.4", "8.8.8.8", "208.67.220.220", "149.112.112.112", "23.253.163.53" ]
        },
        "subnets": [
          {
            "name": "[variables('MTP-SubnetName')]",
            "properties": {
              "addressPrefix": "[variables('MTP-SubnetPrefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('MTP-NSG'))]"
              }
            }
          }
        ],
        "virtualNetworkPeerings": [],
        "enableDdosProtection": false,
        "enableVmProtection": true
      },
      "dependsOn": [ "[concat('Microsoft.Network/networkSecurityGroups/', parameters('MTP-NSG'))]" ]
    },
    {
      "apiVersion": "2017-11-01",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[parameters('MTP-NSG')]",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "[parameters('MTP-NSG')]"
      },
      "properties": {
        "securityRules": [
          {
            "name": "rdp-rule",
            "properties": {
              "description": "Allow RDP",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound",
              "destinationPortRanges": [ "3389", "20000" ],
              "sourceAddressPrefixes": [],
              "destinationAddressPrefixes": []
            }
          },
          {
            "name": "web-rule",
            "properties": {
              "description": "Allow WEB",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "80",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 101,
              "direction": "Inbound"
            }
          },
          {
            "name": "ssh-rule",
            "properties": {
              "description": "Allow SSH",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "22",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 102,
              "direction": "Inbound"
            }
          },
          {
            "name": "PowerShell",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "5986",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 103,
              "direction": "Inbound",
              "sourcePortRanges": [],
              "destinationPortRanges": [],
              "sourceAddressPrefixes": [],
              "destinationAddressPrefixes": []
            }
          },
          {
            "name": "Remote_Debugging",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "4015-4030",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 104,
              "direction": "Inbound",
              "sourcePortRanges": [],
              "destinationPortRanges": [],
              "sourceAddressPrefixes": [],
              "destinationAddressPrefixes": []
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2017-11-01",
      "type": "Microsoft.Network/networkInterfaces",
      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/', parameters('MTP-NSG'))]",
        "[concat('Microsoft.Network/publicIPAddresses/', variables('MTP-VMPublicIPName'))]",
        "[concat('Microsoft.Network/virtualNetworks/', variables('MTP-vNetName'))]"
      ],
      "location": "[resourceGroup().location]",
      "name": "[variables('MTP-VMNIC')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "MTP-IPConfig01",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('MTP-VMPublicIPName'))]"
              },
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "primary": true,
              "privateIPAddressVersion": "IPv4"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2017-11-01",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('MTP-VMPublicIPName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "publicIPAllocationMethod": "[variables('publicIPAddressType')]",
        "dnsSettings": {
          "domainNameLabel": "[parameters('dnsLabelPrefix')]"
        }
      }
    },
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('MTP-VMNIC'))]"
      ],
      "location": "[resourceGroup().location]",
      "name": "[parameters('vmName')]",
      "properties": {
        "licenseType": "Windows_Client",
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "storageProfile": {
          "osDisk": {
            "name": "[concat(parameters('vmName'),'-OSDisk')]",
            "osType": "[parameters('osType')]",
            "createOption": "Attach",
            "vhd": {
              "uri": "[parameters('osVhdUri')]"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('MTP-VMNIC'))]",
              "properties": { "primary": true }
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat(reference(concat('Microsoft.Storage/storageAccounts/', variables('diagStorageAccountName')), '2016-01-01').primaryEndpoints.blob)]"
          }
        }
      }
    }
  ],
  "variables": {
    "api-version": "2015-06-15",
    "diagStorageAccountName": "mtpvmsdiag",
    "publicIPAddressType": "Dynamic",
    "subnetRef": "[concat(variables('vnetID'),'/subnets/',variables('MTP-SubnetName'))]",
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks',variables('MTP-vNetName'))]",
    "MTP-AddressPrefix": "172.16.64.0/25",
    "MTP-SubnetName": "MTP-Subnet",
    "MTP-SubnetPrefix": "172.16.64.0/26",
    "MTP-VMNIC": "[concat(parameters('vmName'), '-NIC')]",
    "MTP-VMPublicIPName": "[concat(parameters('vmName'), '-PublicIP')]",
    "MTP-vNetName": "MTP-vNet"
  }
}